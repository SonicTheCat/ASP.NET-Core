@model CHUSHKA.WEB.ViewModels.UserLogin
@{
    ViewData["Title"] = "Login Page";
}

<form asp-controller="Account" asp-action="Login" method="post" class="mx-auto w-50 mt-3">
    <h2 class="text-center">Login</h2>
    <hr class="bg-secondary"/>
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" aria-describedby="emailHelp" placeholder="Username...">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary bg-danger">Login</button>
    </div>  
</form>
