@using CHUSHKA.WEB.Common
@model CHUSHKA.WEB.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Admin Details Page";
}

<h1 class="text-center mt-2">@Model.Name</h1>
<hr class="border border-dark" />
<div class="d-flex justify-content-around">
    <h6>Type: @Model.Type.ToString()</h6>
    <h6>Price: $@Model.Price</h6>
</div>
<hr class="border border-dark" />
<div class="text-center">
    <h3>Description</h3>
    <p>@Model.Description</p>
</div>
<hr class="border border-dark" />

<h3 class="text-center">Actions</h3>
<div class="d-flex justify-content-around">

    <a asp-controller="Orders" asp-action="Make" asp-route-id="@Model.Id" class="btn btn-danger btn-sm mt-2">Order</a>
    @if (this.User.IsInRole(GlobalConstants.AdministratorRole))
    {

        <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger btn-sm mt-2">Edit</a>
        <button class="btn btn-danger btn-sm mt-2">Delete</button>
    }
</div>