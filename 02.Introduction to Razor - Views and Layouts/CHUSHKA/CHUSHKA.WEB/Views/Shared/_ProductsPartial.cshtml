@using CHUSHKA.WEB.Common
@model IEnumerable<CHUSHKA.WEB.ViewModels.ProductViewModel>

<div class="row container-fluid d-flex justify-content-around ml-1 mr-1">
    @foreach (var item in @Model)
    {
        var descriotion = item.Description.Length > GlobalConstants.MaxDescriptionVisiableLength ?
            item.Description.Substring(0, 47) + GlobalConstants.DescriptionExtensionDotsAtEnd :
            item.Description;

        <div class="col-xl-2 bg-danger text-white mr-1 mb-4">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="pt-3" style="color:inherit;width:100%;height:100%;display:block">
                <p class="text-center">@item.Name</p>
                <hr class="border border-white" />
                <p class="text-center">@descriotion</p>
                <hr class="border border-white" />
                <p class="text-center">$@item.Price</p>
            </a>
        </div>
    }
</div>
